---
const navItems = [
    { href: "/", label: "Home" },
    { href: "/blog", label: "Blog" },
    { href: "/docs", label: "Docs" },
];
---

<header
    class="sticky top-0 z-50 w-full border-b border-surface0/50 bg-base/70 backdrop-blur-md"
>
    <nav
        class="container mx-auto px-4 h-16 flex items-center justify-between max-w-4xl"
    >
        <a
            href="/"
            class="text-xl font-bold text-mauve tracking-tight hover:opacity-80 transition-opacity"
        >
            Luminaw
        </a>

        <ul class="flex gap-6">
            {
                navItems.map((item) => (
                    <li>
                        <a
                            href={item.href}
                            class="text-sm font-medium text-subtext1 hover:text-mauve transition-colors"
                        >
                            {item.label}
                        </a>
                    </li>
                ))
            }
        </ul>
    </nav>
</header>
